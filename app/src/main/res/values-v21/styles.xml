<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material.NoActionBar.Fullscreen">
        <item name="android:colorPrimary">@color/PrimaryColor</item>
        <item name="android:colorPrimaryDark">@color/PrimaryDarkColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="MyTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/dialogWhiteGrey</item>

    </style>
    <style name="MyCustomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/PrimaryColor</item>
        <item name="android:colorPrimaryDark">@color/PrimaryDarkColor</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="CustomAlertDialogStyle">

    </style>
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


    <style name="CustomCheckBox">
        <item name="android:theme">@style/CheckBoxAppTheme</item>
    </style>

    <style name="CheckBoxAppTheme">
        <item name="android:colorAccent">
            @color/theFillColorInCheckedState
        </item>
        <item name="android:colorControlNormal">
            @color/PrimaryColor
        </item>
        <item name="android:colorControlHighlight">
            @color/theBackgroundColorWhenFocusingTheCheckBox
        </item>
    </style>
    <style name="ToolBar">
        <item name="android:text">@string/app_name</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>
    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="StarRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:color">#A91C44</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/primaryFocused</item>
        <item name="colorControlActivated">@color/PrimaryColor</item>
    </style>
</resources>