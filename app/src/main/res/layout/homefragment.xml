<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:iosched="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/homefragment"
    tools:layout="@layout/homefragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mapfragment"
        android:layout_above="@+id/Trucks"
        android:layout_below="@+id/toolbar">
        <fragment
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:id="@+id/marker"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/Trucks"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:src="@drawable/marker"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/toolbar"
        android:orientation="horizontal"
        android:background="@color/PrimaryColor"
        android:layout_height="wrap_content">
        <include layout="@layout/actionbar"/>
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/pickup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:layout_below="@+id/toolbar"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        iosched:cardCornerRadius="@dimen/card_corner_radius"
        iosched:cardElevation="3dp"
        iosched:cardUseCompatPadding="true"
        iosched:cardPreventCornerOverlap="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_search_black_24dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:orientation="vertical"
                    android:layout_gravity="top"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/pickLocation"
                        android:textColor="@color/title"
                        android:textSize="10sp"
                        android:paddingTop="8dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/autocomplete_places_from"
                        android:hint="PICK PICKUP LOCATION"
                        android:textColor="#504747"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:paddingBottom="8dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginStart="6dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginEnd="20dp"
                        android:textSize="15sp"
                        />
                </LinearLayout>
            </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"

        android:layout_below="@+id/pickup"
        iosched:cardCornerRadius="@dimen/card_corner_radius"
        iosched:cardElevation="3dp"
        iosched:cardPreventCornerOverlap="false"
        iosched:cardUseCompatPadding="true"
        android:id="@+id/dropOffCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingStart="12dp"
            >
            <ImageView
                android:contentDescription="@string/abc_search_hint"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_search_black_24dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="top"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/dropLocation"
                    android:textColor="@color/title"
                    android:textSize="10sp"
                    android:paddingTop="8dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:hint="PICK DROPOFF LOCATION"
                    android:id="@+id/autocomplete_places_to"
                    android:textColor="#504747"
                    android:gravity="center"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:paddingBottom="8dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginEnd="20dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dropOffCard"
        android:layout_margin="10dp"
        android:id="@+id/getmylocation"
        android:src="@drawable/ic_my_location_black_48dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_above="@+id/book"
        android:background="#FFF"
        android:id="@+id/Trucks"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="16">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="No Truck"
                android:layout_margin="2dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/eccotime"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/ecconew"
                android:id="@+id/ecco"
                android:layout_margin="2dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ECCO"
                android:textSize="10sp"
                android:textColor="@color/PrimaryColor"
                android:textStyle="bold"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0.5dp"
            android:background="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="16">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="No Truck"
                android:layout_margin="2dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/championtime"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/championnew"
                android:id="@+id/champ"
                android:layout_margin="2dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHAMPION"
                android:textSize="10sp"
                android:textColor="@color/PrimaryColor"
                android:textStyle="bold"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0.5dp"
            android:background="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="16">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_margin="2dp"
                android:text="No Truck"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/acetime"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/acenew"
                android:id="@+id/ace"
                android:layout_margin="2dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TATA ACE"
                android:textSize="10sp"
                android:textColor="@color/PrimaryColor"
                android:textStyle="bold"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0.5dp"
            android:background="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="16">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="No Truck"
                android:layout_margin="2dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/tatatime"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/tatanew"
                android:id="@+id/tata"
                android:layout_margin="2dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TATA 407"
                android:textSize="10sp"
                android:textColor="@color/PrimaryColor"
                android:textStyle="bold"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0.5dp"
            android:background="#000000"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="16">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="No Truck"
                android:layout_margin="2dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/forteentime"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/forteennew"
                android:id="@+id/forteen"
                android:layout_margin="2dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="14 FEET"
                android:textSize="10sp"
                android:textColor="@color/PrimaryColor"
                android:textStyle="bold"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
        android:layout_width="0.5dp"
        android:background="#000000"
        android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
        android:layout_height="match_parent"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="16">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="12sp"
                android:text="No Truck"
                android:layout_margin="2dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:id="@+id/seventeentime"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:src="@drawable/seventeennew"
                android:id="@+id/seventeen"
                android:layout_margin="2dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="17 FEET"
                android:textSize="10sp"
                android:textColor="@color/PrimaryColor"
                android:textStyle="bold"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:id="@+id/book"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="match_parent"
            android:background="@drawable/custome_squarebutton_ripple"
            android:textColor="#FFFF"
            android:layout_weight="50"
            android:textSize="16sp"
            android:text="IMMEDIATE BOOKING"
            android:id="@+id/now"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#FFFF"></LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFF"
            android:id="@+id/later"
            android:textSize="16sp"
            android:layout_weight="50"
            android:text="ADVANCE BOOKING"
            android:background="@drawable/custome_squarebutton_ripple"
            />
    </LinearLayout>
</RelativeLayout>
