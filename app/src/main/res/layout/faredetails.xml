<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/trucknameheader"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:text="TRUCK NAME"
            android:textColor="#CC000000"
            android:id="@+id/truckname"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:layout_margin="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/farebreak"
        android:layout_below="@+id/trucknameheader"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#CCCCD6CC"
            android:layout_weight="50"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_height="1dp"></LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fare Breakup"
            android:gravity="center"
            android:layout_weight="50"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#CCCCD6CC"
            android:layout_weight="50"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/farebreakupdetails"
        android:orientation="horizontal"
        android:layout_below="@+id/farebreak"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="50"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:id="@+id/truckbasefare"
                android:textStyle="bold"
                android:textColor="#CC000000"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Basefare for first 3 kms"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:background="#CCCCD6CC"
            android:layout_marginTop="10dp"
            android:layout_height="fill_parent"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="50"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:id="@+id/truckpostfare"
                android:textStyle="bold"
                android:layout_margin="5dp"
                android:gravity="center"
                android:textColor="#CC000000"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fare after 3 kms"
                android:layout_margin="10dp"
                android:gravity="center"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:background="#CCCCD6CC"
            android:layout_marginTop="10dp"
            android:layout_height="fill_parent"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="50"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="fill_parent"
                android:id="@+id/capacity"
                android:text="capacity"
                android:textStyle="bold"
                android:textColor="#CC000000"
                android:layout_margin="5dp"
                android:gravity="center"
                android:layout_height="wrap_content" />
            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:gravity="center"-->
                <!--android:text="dimensions"-->
                <!--android:layout_marginBottom="2dp"-->
                <!--android:textStyle="bold"-->
                <!--android:id="@+id/dimension"-->
                <!--/>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dimensions"
                android:layout_margin="10dp"
                android:gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/farebreakupdetails"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Transit Charges and Waiting Charges are applicable"
            android:gravity="center"
            android:minLines="3"
            android:layout_marginTop="15dp"
            />
    </LinearLayout>
</RelativeLayout>
