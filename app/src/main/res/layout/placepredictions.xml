<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:iosched="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        iosched:cardBackgroundColor="#fff"
        android:layout_alignParentTop="true"
        iosched:cardCornerRadius="@dimen/card_corner_radius"
        iosched:cardElevation="@dimen/card_elevation"
        iosched:cardPreventCornerOverlap="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_margin="3dp"
                android:src="@drawable/ic_search_black_24dp"
                />
            <TextView
                android:id="@+id/autocomplete_places_prediction"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:lines="1"
                android:background="#FFFFFF"
                android:layout_margin="5dp"
                android:padding="5dp"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:hint="Search"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>